{
  "name": "TriGuard with Airflow",
  "dockerComposeFile": "docker-compose.yml",
  "service": "airflow-apiserver",
  "workspaceFolder": "/opt/airflow",
  "postCreateCommand": "echo 'Airflow is ready! Access at http://localhost:8080 (username: airflow, password: airflow)'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "forwardPorts": [8080, 5555],
  "portsAttributes": {
    "8080": {
      "label": "Airflow Web UI",
      "onAutoForward": "notify"
    },
    "5555": {
      "label": "Flower (Celery Monitor)",
      "onAutoForward": "silent"
    }
  }
}
